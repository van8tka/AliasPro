<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    >
<LinearLayout
    android:layout_weight="3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="12dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/tvRoundPointsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strRoundPointsName"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPointsCountRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvShowWordRound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        >

    </ListView>
</LinearLayout>

    <Button
        android:id="@+id/btnGoToChoseNextCommand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="@string/btnNextStep"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:onClick="btnGoToChoseNextTeam_Click"
       />
</LinearLayout>