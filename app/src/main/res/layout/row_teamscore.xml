<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imgTeamAvatar"/>

    <TextView
        android:id="@+id/tvComandName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgTeamAvatar"
        android:text="Команды"
        android:textColor="@color/colorBlack"
        android:textSize="17sp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:gravity="center"
            android:id="@+id/tvScoreAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/colorYellow"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/tvScoreRound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/colorPrimaryCustom1"
            />
   </LinearLayout>
</LinearLayout>