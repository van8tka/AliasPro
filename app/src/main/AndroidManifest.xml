<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devprogram.aliaspro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RulesActivity"
            android:label="@string/label_rules_activity"
            android:noHistory="true" />
        <activity
            android:name=".SettingsGameActivity"
            android:label="@string/label_settings_activity" />
        <activity
            android:name=".DictionaryActivity"
            android:label="@string/label_dictionaries_activity"
            android:noHistory="true" />
        <activity
            android:name=".RoundResultActivity"
            android:label="@string/label_roundresult_activity"
            android:noHistory="true" />
        <activity
            android:name=".BeginGameActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_rating_activity"
            android:noHistory="true" />
        <activity
            android:name=".PlayGameActivity"
            android:noHistory="true" />
        <activity android:name=".CongratulationActivity" android:noHistory="true" android:label="@string/label_congratulate_activity"/>
    </application>

</manifest>