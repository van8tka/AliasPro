<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devprogram.aliaspro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RulesActivity"
            android:label="Правила игры" />
        <activity
            android:name=".SettingsGameActivity"
            android:label="Настройки игры" />
        <activity
            android:name=".DictionaryActivity"
            android:label="Словари" />
        <activity android:name=".BeginGameActivity"
            android:label="Рэйтинг команд"
            android:configChanges="orientation|screenSize"
            ></activity>
    </application>

</manifest>